generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  TENANT
}

enum AuthProvider {
  EMAIL
  GOOGLE
  FACEBOOK
}

enum VerificationStatus {
  PENDING
  VERIFIED
}

enum PropertyCategory {
  HOTEL
  APARTMENT
  VILLA
  KOS
}

// AUTH (CORE)
model AuthAccount {
  id                 String             @id @default(uuid())
  email              String             @unique
  password           String?
  role               Role
  provider           AuthProvider       @default(EMAIL)
  verificationStatus VerificationStatus @default(PENDING)

  verificationToken  VerificationToken?
  resetPasswordToken ResetPasswordToken?

  user   User?
  tenant Tenant?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("auth_accounts")
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiredAt DateTime

  authAccountId String      @unique
  authAccount   AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

model ResetPasswordToken {
  id        String    @id @default(uuid())
  token     String    @unique
  expiredAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  authAccountId String      @unique
  authAccount   AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)

  @@map("reset_password_tokens")
}

model User {
  id            String  @id @default(uuid())
  authAccountId String  @unique
  name          String
  profileImage  String?

  authAccount AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)
  reviews     Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@map("users")
}

model Tenant {
  id            String @id @default(uuid())
  authAccountId String @unique

  storeName    String
  storeAddress String?
  logo         String?
  isApproved   Boolean @default(false)

  authAccount AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)
  properties  Property[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenants")
}

model Property {
  id               String           @id @default(uuid())
  tenantId         String
  propertyCategory PropertyCategory

  name        String
  description String
  address     String
  city        String
  image       String
  maxGuest    Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  type    RoomType[]
  reviews Review[]

  @@map("properties")
}

model RoomType {
  id         String @id @default(uuid())
  propertyId String

  name        String
  basePrice   Int
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  rooms Room[]

  @@map("room_types")
}

model Room {
  id     String @id @default(uuid())
  typeId String

  roomNumber Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type RoomType @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  orderItems OrderItem[]

  @@map("rooms")
}


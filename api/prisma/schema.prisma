generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  TENANT
}

enum AuthProvider {
  EMAIL
  GOOGLE
  FACEBOOK
}

enum VerificationStatus {
  PENDING
  VERIFIED
}

enum AdjustmentType {
  PERCENTAGE
  NOMINAL
}

// AUTH (CORE)
model AuthAccount {
  id                 String             @id @default(uuid())
  email              String             @unique
  password           String?
  role               Role
  provider           AuthProvider       @default(EMAIL)
  verificationStatus VerificationStatus @default(PENDING)

  verificationToken  VerificationToken?
  resetPasswordToken ResetPasswordToken?

  user   User?
  tenant Tenant?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("auth_accounts")
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiredAt DateTime

  authAccountId String      @unique
  authAccount   AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

model ResetPasswordToken {
  id        String    @id @default(uuid())
  token     String    @unique
  expiredAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  authAccountId String      @unique
  authAccount   AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)

  @@map("reset_password_tokens")
}

model User {
  id            String  @id @default(uuid())
  authAccountId String  @unique
  name          String
  profileImage  String?

  authAccount AuthAccount @relation(fields: [authAccountId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders  Order[]
  reviews Review[]

  @@map("users")
}

model Tenant {
  id            String @id @default(uuid())
  authAccountId String @unique

  storeName    String
  storeAddress String?
  logo         String?
  isApproved   Boolean @default(false)

  authAccount AuthAccount        @relation(fields: [authAccountId], references: [id], onDelete: Cascade)
  properties  Property[]
  categories  PropertyCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tenants")
}

// PROPERTY
model PropertyCategory {
  id       String @id @default(uuid())
  tenantId String
  name     String

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  properties Property[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("property_categories")
}

model Property {
  id         String @id @default(uuid())
  tenantId   String
  categoryId String

  name        String
  description String
  address     String
  city        String
  image       String
  maxGuest    Int
  isActive    Boolean @default(true)

  tenant   Tenant           @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  category PropertyCategory @relation(fields: [categoryId], references: [id])

  roomTypes RoomType[]
  reviews   Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@index([name])
  @@index([city])
  @@index([categoryId])
  @@map("properties")
}

model RoomType {
  id         String @id @default(uuid())
  propertyId String

  name        String
  basePrice   Int
  description String

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems      OrderItem[]
  rooms           Room[]
  peakSeasonRates PeakSeasonRate[]

  @@index([propertyId])
  @@index([name])
  @@map("room_types")
}

model Room {
  id     String @id @default(uuid())
  typeId String

  roomNumber Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type RoomType @relation(fields: [typeId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([typeId, roomNumber])
  @@map("rooms")
}

model PeakSeasonRate {
  id         String @id @default(uuid())
  roomTypeId String

  startDate DateTime
  endDate   DateTime

  adjustmentType AdjustmentType
  value          Int

  roomType RoomType @relation(fields: [roomTypeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roomTypeId])
  @@index([roomTypeId, startDate, endDate])
  @@map("peak_season_rates")
}

model OrderItem {
  id         String @id @default(uuid())
  roomTypeId String
  orderId    String

  roomQuantity Int      @default(1)
  checkInDate  DateTime
  checkOutDate DateTime
  basePrice    Float
  totalAmount  Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roomType RoomType @relation(fields: [roomTypeId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("order_items")
}

enum StatusOrder {
  WAITING_PAYMENT
  REJECTED
  EXPIRED
  PAID
  CANCELLED
}

model Order {
  id     String @id @default(uuid())
  userId String

  totalAmount Float
  status      StatusOrder @default(WAITING_PAYMENT)
  verifiedAt  DateTime?
  expiredAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  orderItems OrderItem[]
  payments   Payment[]

  @@map("orders")
}

enum StatusPayment {
  PENDING
  WAITING_CONFIRMATION
  CANCELLED
  EXPIRED
  REJECTED
  DONE
}

model Payment {
  id      String @id @default(uuid())
  orderId String

  totalPaid    Float
  status       StatusPayment @default(PENDING)
  paymentProof String?
  paidAt       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("payment")
}

model Review {
  id         String @id @default(uuid())
  customerId String
  propertyId String

  rate    Float
  comment String
  reply   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer User     @relation(fields: [customerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([customerId, propertyId])
  @@map("reviews")
}
